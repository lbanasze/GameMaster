<!-- board_game_shelf.html -->
<style>
    .shelf {
        background-color: #8B4513;
        box-shadow: 0 8px 6px -6px #5D3212;
        position: relative;
    }

    .shelf:after {
        content: '';
        position: absolute;
        top: -10px;
        left: 0;
        width: 100%;
        height: 10px;
        background-color: #A0522D;
        border-radius: 4px 4px 0 0;
    }

    .game-box {
        transition: transform 0.3s ease;
    }

    .game-box:hover {
        transform: translateY(-10px);
    }
</style>
<body class="bg-amber-50 min-h-screen p-8">
    <div class="max-w-6xl mx-auto">
        <h1 class="text-3xl font-bold text-center text-amber-800 mb-8">My Board Game Collection</h1>

        {% for shelf in game_shelves %}
        <div class="mb-16 relative">
            <!-- Shelf -->
            <div class="shelf h-4 w-full rounded-sm mb-2"></div>

            <!-- Games on shelf -->
            <div class="flex justify-center gap-4 px-4">
                {% for game_url in shelf %}
                <div class="game-box w-36 flex flex-col items-center">
                    <div class="h-48 w-36 overflow-hidden rounded-lg mb-2 p-2">
                        <form hx-get="/game">
                            <img src="{{ game_url }}" alt="Board game thumbnail" class="h-full w-full object-contain">
                        </form>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
        {% endfor %}

        <!-- Shelf -->
        <div class="shelf h-4 w-full rounded-sm mb-2"></div>
    </div>
</body>
</html>
